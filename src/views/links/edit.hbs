<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{vehicle.id}}" method="POST">
                        <label for="exampleInputEmail1">Vehicle information</label>
                        <div class="form-group">
                            <input type="text" value="{{vehicle.plates}}" class="form-control" name="plates" placeholder="Plate" autofocus >
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{vehicle.brand}}" class="form-control" name="brand" placeholder="Brand"  >
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{vehicle.color}}" class="form-control" name="color" placeholder="Color"  >
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{vehicle.model_year}}" class="form-control" name="model_year" placeholder="Model Year"  >
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{vehicle.lat}}" class="form-control" name="lat" placeholder="Latitude"  >
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{vehicle.lon}}" class="form-control" name="lon" placeholder="Longitude"  >
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Update
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>